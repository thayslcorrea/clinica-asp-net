@model ClinicaApp.Models.Profissional

@{
    ViewData["Title"] = "Editar Profissional";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdProfissional" />
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Especialidade" class="form-label"></label>
        <input asp-for="Especialidade" class="form-control" />
        <span asp-validation-for="Especialidade" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
